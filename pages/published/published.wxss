/* pages/published/published.wxss */
.published_mask{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.13;
}
/* 弹出层 */
.modalDlg{
    width: 100%;
    height: 540rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 34rpx 30rpx 0 0;
    box-sizing: border-box;
}
.pop-window {
    width: 548rpx;
    height: 578rpx;
    /*border: 1px solid red;*/
    position: relative;
    z-index: 10000;
    margin: 0 auto;
    background-color: #ffffff;
    border-radius: 24rpx;
    overflow: hidden;
}
.pop-window text:first-of-type {
    color: #353535;
    font-size: 18px;
    font-weight: 700;
    /*line-height: 50rpx;*/
    width: 90px;
    height: 25px;
    /*border: 1px solid red;*/
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 324rpx;
    /*margin: 0 auto;*/
}
.pop-window text:last-of-type {
    width:180px;
    /*border: 1px solid red;*/
    height:17px;
    font-size:12px;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(136,136,136,1);
    line-height:17px;
    position: absolute;
    bottom: 246rpx;
    left: 50%;
    transform: translateX(-50%);
}
.published_container {
    display: flex;
    align-items: center;
}
.top {
}
.top image {

    width: 548rpx;
    height: 164rpx;
}
.share {
    width:476rpx;
    height:100rpx;
    background:rgba(39,181,186,1);
    box-shadow:0px 4rpx 14rpx 0px rgba(9,48,50,0.45),0px 10rpx 16rpx 0px rgba(9,48,50,0.28);
    border-radius:50rpx;
    position: absolute;
    bottom: 70rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 16px;
    font-weight: 500;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}
.close {
    width: 22rpx;
    height: 24rpx;
    /*border: 1px solid red;*/
    position: absolute;
    right: 25rpx;
    top: 25rpx;
}
