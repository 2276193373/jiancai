.page-padding {
    padding: 16px;
    box-sizing: border-box;
}
.container {
    height: 100%;
    border-radius: 2px;
    position: relative;
    background-color: white;
}
.container-padding {
    position: relative;
    padding: 12px 16px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}
.block-shadow {
    padding-bottom: 10px;
    box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, .23);
}
.type {
    width: 78rpx;
    height: 63rpx;
    background-color: #FF4E30;
    box-shadow: 0 4rpx 6rpx 0 rgba(73, 10, 10, .3);
    border-radius: 6rpx 6rpx 6rpx 0;
    font-size: 21px;
    color: #ffffff;
    text-align: center;
    line-height: 63rpx;
    position: absolute;
    right: -17rpx;
    top: -20rpx;
}
.solved-top-right {
    width: 25px;
    height: 62px;
    /*border: 1px solid red;*/
    position: absolute;
    right: 0;
    top: 0;
    writing-mode: vertical-lr;
    color: #ffffff;
    border-top-right-radius: 10px;
    overflow: hidden;
}
.solved-top-right > image {
    width: 25px;
    height: 62px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}
.solved-top-right > text {
    position: absolute;
    z-index: 1;
    font-size: 12px;
    left: 50%;
    top: 10%;
    transform: translateX(-50%);
    letter-spacing: 2px;
}
.solved {
    width: 95%;
    height: 47px;
    margin: 0 auto;
    background-color: rgba(0, 0, 0, .32);
    border-radius: 8px;
    text-align: center;
    color: #ffffff;
    line-height: 47px;
}
.publish-time {
    font-size: 12px;
    color: #888888;
    font-weight: 400;
    position: absolute;
    right: 30px;
}
.avatar-bar {
    box-sizing: border-box;
    display: flex;
    position: relative;
    margin-bottom: 13px;
}

.avatar-bar > image {
    width: 42px;
    height: 42px;
    border-radius: 100rpx;
}
.avatar-bar > view:first-of-type {
    display: flex;
    flex-direction: column;
    margin-left: 28rpx;
}
.avatar-bar > view > text:first-child {
    color: #888888;
    font-size: 14px;
    margin-bottom: 8rpx;
}
.company {
    color: rgba(136,136,136,1);
    font-size: 11px;
}
.second-img {
    margin: 0 14rpx!important;
}
.production-img {
    width: 103%;
    display: flex;
    justify-content: start;
    margin: 34rpx 0 20rpx;
    flex-wrap: wrap;
}
.production-img > image {
    width: 220rpx;
    height: 220rpx;
    margin-bottom: 14rpx;
}
.intro {
    font-size: 14px;
    color: rgba(0,0,0,.65);
    line-height: 24px;
    width: 100%;
    word-break: break-word;
}
.intro > image {
    margin-left: 14rpx;
}
.float-right {
    float: right;
    width: auto;
    height: auto;
    display: flex;
    align-items: center;
}
.float-right > image {
    width: 16rpx;
    height: 26rpx;
}

.position {
    display: flex;
    align-content: center;
    justify-content: space-between;
    font-size: 14px ;
    padding: 14px 16px 16px 0;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}
.position > view {
    display: flex;
    align-items: center;
}
.position > view >.icon {
    width: 32rpx;
    height: 40rpx;
    /*border: 1px solid red;*/
    margin: 0 20rpx 0 16px;
}
.location-detail {
    width: 180px;
}
.position > text {
    float: right;
}
.btn-container {
    color: #000;
    padding: 11px 20px 12px;
    background-color: #ffffff;
    margin-top: 10px;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 90%;
    z-index: 100;
    box-shadow: 0 -1px 3px 0 rgba(0,0,0, .11);
}
.unsolved {
    margin: 0 auto;
    padding-top: 19px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.unsolved image {
    width: 24px;
    height: 24px;
}
.unsolved > view {
    font-size: 12px;
    color: rgba(0, 0, 0, .62);
}
.btn-control {
    /*border: 1px solid red;*/
    display: flex;
    justify-content: space-around;
}
.contact {
    line-height: unset;
    padding: 0;
    width: 72px;
    height: 47px;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: white;
}
.contact::after {
    border: unset;
}
.btn-font {
    color: rgba(0, 0, 0, .62);
    font-size: 12px;
}
.contact-btn {
    width: 24px;
    height: 24px;
}
.test {
    width: 10px;
    height: 10px;
    background-color: #EFEFF4;
    box-shadow: inset 0 0 12rpx 0 rgba(0, 0, 0, .23);
    transform: rotateZ(45deg);
    position: absolute;
    left: -12rpx;
}
.test-right {
    width: 10px;
    height: 10px;
    background-color: #EFEFF4;
    box-shadow: inset 0 0 12rpx 0 rgba(0, 0, 0, .23);
    position: absolute;
    right: -12rpx;
    transform: rotateZ(45deg);
}
.dash-line {
    margin: 12rpx 0 22rpx;
}
.split-block {
    width: 686rpx;
    height: 30rpx;
    transform: translate(-1px,24rpx);
    overflow: hidden;
    border-left: 1px solid #EFEFF4;
    border-right: 1px solid #EFEFF4;
    position: relative;
    top: -10rpx;
}
.dash {
    width: 686rpx;
    border-top: 1px dashed #dadade;
    position: absolute;
    top: 40%;
    z-index: -3;
    transform: translateY(-3rpx);
}
.line-split {
    width: 100%;
    height: 10px;
    background-color: white;
    position: relative;
    overflow: hidden;
    z-index: 10;
}
.box {
    box-shadow: inset 0 0 2px 0 rgba(0,0,0, .23);
    width: 8px;
    height: 8px;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%) rotateZ(45deg);
    background-color: #f5f5fa;
    z-index: 2;
}
.box-right {
    right: 0;
    transform: translate(50%,-50%) rotateZ(45deg);
    /*border: 1px solid red;*/
}
.line {
    border-top: 1px dashed #dddde2;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 0px;
    width: 100%;
    height: 0;
    z-index: 1;
}
.ipx {
    padding-bottom: 68rpx!important;
}
.published_container_wrap {
    position: relative;
    height: 0;
    top: 40px;
}
.published_container {
    width: 100%;
    position: absolute;
    left: 50%;
    transform: translate(-50%,-10%);
    z-index: 100001;
    display: flex;
    align-items: center;
}
.mask{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.4;
}
.pop-window {
    width: 548rpx;
    height: 578rpx;
    /*border: 1px solid red;*/
    position: relative;
    z-index: 10000;
    margin: 0 auto;
    background-color: #ffffff;
    border-radius: 24rpx;
    overflow: hidden;
    box-shadow: 0 0 6px 1px rgba(0, 0, 0, .28);
}
.pop-window text:first-of-type {
    color: #353535;
    font-size: 18px;
    font-weight: 700;
    line-height: 50rpx;
    width: 180rpx;
    height: 50rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 324rpx;
}
.pop-window text:last-of-type {
    width:180px;
    /*border: 1px solid red;*/
    height:17px;
    font-size:12px;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(136,136,136,1);
    line-height:17px;
    position: absolute;
    bottom: 246rpx;
    left: 50%;
    transform: translateX(-50%);
}
.top image {
    width: 548rpx;
    height: 164rpx;
}
.share {
    width:476rpx;
    height:100rpx;
    background:rgba(39,181,186,1);
    box-shadow:0px 4rpx 14rpx 0px rgba(9,48,50,0.45),0px 10rpx 16rpx 0px rgba(9,48,50,0.28);
    border-radius:50rpx;
    position: absolute;
    bottom: 70rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 16px;
    font-weight: 500;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}
.close {
    width: 22rpx;
    height: 24rpx;
    padding: 10rpx;
    position: absolute;
    right: 15rpx;
    top: 20rpx;
}
