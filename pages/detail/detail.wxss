.container {
    width: 686rpx;
    /*border: 1px solid red;*/
    margin: 42rpx auto 0;
    border-radius: 4rpx;
    /*padding-bottom: 76rpx;*/
    padding-bottom: 10px;
    position: relative;
}
.container-padding {
    position: relative;
    padding: 12px 16px;
}
.block-shadow {
    padding-bottom: 10px;
    box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, .23);
}
.type {
    width: 78rpx;
    height: 63rpx;
    background-color: #FF4E30;
    box-shadow: 0 4rpx 6rpx 0 rgba(73, 10, 10, .3);
    border-radius: 6rpx 6rpx 6rpx 0;
    font-size: 21px;
    color: #ffffff;
    text-align: center;
    line-height: 63rpx;
    position: absolute;
    right: -17rpx;
    top: -20rpx;
}
.publish-time {
    font-size: 12px;
    color: #888888;
    font-weight: 400;
    position: absolute;
    right: 30px;
    line-height: 24px;
}
.avatar-bar {
    box-sizing: border-box;
    display: flex;
    position: relative;
    margin-bottom: 13px;
}


.avatar-bar > image {
    width: 42px;
    height: 42px;
    /*border: 1px solid red;*/
    /*margin-left: 36rpx;*/
    /*margin-right: 28rpx;*/
    border-radius: 100rpx;
}
.avatar-bar > view:first-of-type {
    display: flex;
    flex-direction: column;
    margin-left: 28rpx;
}
.avatar-bar > view > text:first-child {
    color: #888888;
    font-size: 14px;
    margin-bottom: 8rpx;
}
.company {
    color: rgba(136,136,136,1);
    font-size: 11px;
}
