.container {
    padding: 32rpx;
}
.type-container {
    /*border: 1px solid yellow;*/
    column-count: 2;
    /*break-inside: avoid;!*避免在元素内部插入分页符*!*/
    column-gap: 0px;
}
.body-container {
    /*position: relative;*/
    /*top: 8rpx;*/
    background-color: transparent;
    break-inside: avoid;/*避免在元素内部插入分页符*/
    box-sizing: border-box;
    padding: 10px 5px;
    /*padding-bottom: 7px;*/
    border-radius: 20rpx;
    /*border: 1px solid red;*/
}
.body-part {
    width: 100%;
    /*height: 548rpx;*/
    margin: 0px auto 0rpx;
    background-color: transparent;
    /*background-color: green;*/
    padding: 28rpx 0;
    position: relative;
    box-shadow: 0 2px 7px 0px rgba(0, 0, 0, .16);
    border-radius: 20rpx;
    /*top: 10px;*/
    /*border: 1px solid red;*/
}
.profile {
    width: 686rpx;
    height: 352rpx;
    padding: 32rpx;
    box-sizing: border-box;
    box-shadow: 0 2px 6px 0 rgba(0,0,0,.24), 0 0 2px 0 rgba(0,0,0, .12);
    border-radius: 4px;
    color: #888;
    position: relative;
}
.profile > image {
    position: absolute;
    width: 686rpx;
    height: 352rpx;
    z-index: -1;
    /*border: 1px solid red;*/
    right: 0;
    top: 0;
}
.avatar-bar {
    display: flex;
    align-items: center;
    font-size:18px 36rpx;
    color: #000;
    margin: 0 0 30rpx 16rpx;
    position: relative;
}
.avatar-bar > image, .personal-info > image {
    width: 64rpx;
    height: 64rpx;
    align-items: center;
    margin-right: 18rpx;  border-radius: 100rpx;
}
.avatar-bar > text {
    display: flex;
    align-items: center;
    color: #888888;
}
.avatar-bar > text:last-child {

}
.avatar-bar > image {
    width: 46rpx;
    height: 46rpx;
}
.image-wrapper {
    width: 16rpx;
    height: 26rpx;
    line-height: 42rpx;
    position: absolute;
    right: 4rpx;
}
.arrow-left {
    width: 16rpx;
    height: 26rpx;
    margin: 0 32rpx 0 16rpx;
}
.personal-info {
    display: flex;
    align-items: center;
    /*margin: 8px 0;*/
    /*border: 1px solid red;*/
}
.personal-info > text {
    font-size: 16px;
}
.me-icon {
    width: 26rpx;
    height: 26rpx;
    margin-right: 20rpx;
}
/*我的供应与需求导航栏*/
.navbar {
    display: flex;
    justify-content: center;
    margin-top: 54rpx;
    margin-bottom: 24rpx;
    color: #353535;
    font-size: 14px;
    font-weight: 400;
    background-color: white;
}
.navbar > view:first-child {
    margin-right: 220rpx;
}

.active {
    color: #FF4B49;
    background: red;
}

.type {
    width: 78rpx;
    height: 63rpx;
    background-color: #FF4E30;
    box-shadow: 0 4rpx 6rpx 0 rgba(73, 10, 10, .3);
    border-radius: 6rpx 6rpx 6rpx 0;
    font-size: 21px;
    color: #ffffff;
    text-align: center;
    line-height: 63rpx;
    position: absolute;
    right: -17rpx;
    top: -20rpx;
}
.production-img-container {
    position: relative;
}
.production-img {
    display: flex;
    justify-content: flex-start;
    margin: 34rpx 0;
    /*border: 1px solid red;*/
}
.username-style {
    color: #888888;
    font-size: 12px;
}
.title-me {
    margin: 0 0 20rpx 16rpx;
    color: #353535;
    font-size:14px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 294rpx;
}
.body-part .intro {
    margin-left: 16rpx;
    width: 294rpx;
    height: 28rpx;
    line-height: 11px;
    /*下面三行是文本超出省略*/
    white-space: nowrap;
    overflow: hidden;
    /*border: 1px solid red;*/
    text-overflow: ellipsis;
    font-size:11px;
    font-family: "PingFangSC-Regular";
}
.avatar-me {
    margin:0;
    margin-bottom: 10px;
}
.avatar-me > image {
    border-radius: unset !important;
    width: 84rpx;
    height: 84rpx;
}
.avatar-me > text {
    margin-left: 40rpx;
    color: #353535;
    font-size: 18px;
    font-weight: 500;

}
.me-btn {
    margin: 0 auto;
    width:171px;
    height:35px;
    background:linear-gradient(90deg,rgba(24,170,174,1) 0%,rgba(84,223,210,1) 100%);
    box-shadow:2px 3px 6px 0px rgba(20,122,123,0.14);
    border-radius:18px;
    color: #ffffff;
    font-size: 15px;
    /*border: 1px solid red;*/
    display: inline-block;
}
.me-empty {
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    margin-top: 50rpx;
    /*border: 1px solid green;*/
}
.me-empty > view {
    /*border: 1px solid red;*/
    /*height:17px;*/
    display: inline-block;
    text-align: center;
    font-size:12px;
    font-weight:400;
    color:rgba(0,0,0,0.48);
    line-height:17px;
    margin-bottom: 30px;
    margin-top: 7px;
}
.me-empty > image {
    width: 194px;
    height: 197px;
    margin: 0 auto;
    transform: translateX(24rpx);
    /*border: 1px solid red;*/
}
.profile-display {
    /*border: 1px solid red;*/
    height: 100px;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}
