/* pages/publish/publish.wxss */
page {
    background-color: #EFEFF4;
}
.container {
    /*border: 1px solid red;*/
    background-color: #EFEFF4;
    position: relative;
    /*padding-bottom: 50px;*/
}
.title {
    padding: 30rpx 0;
    padding-left: 32rpx;
    font-size: 14px;
    color: #888;
    box-sizing: border-box;
    font-weight: 400;
}
.content {
    display: flex;
    background-color: white;
    padding-left: 32rpx;
    box-sizing: border-box;
    height: 108rpx;
    align-items: center;
    position: relative;
}
.content > text {
    font-size: 17px ;
    margin-right: 10px;
    /*border: 1px solid red;*/
}
.content-tra {
    height: 75px;
    padding-top: 15px;
    padding-bottom: 36px;
}
.content-tra > textarea {
    /*border: 1px solid red;*/
    height: 54px;
    width: 68%;
    /*position: absolute;*/
    /*top: 50%;*/
    /*right: 10px;*/
    transform: translateY(35%);
}
.content-imgAdd {
    position: relative;
    height: auto!important;
    overflow: hidden;
    padding: 24rpx 0 0 32rpx;
    display: flex;
    flex-wrap: wrap;
}
.content-imgAdd  image {
    width: 116rpx;
    height: 116rpx;
}
.content-selection {
    height: 108rpx;
    margin: 30rpx 0;
}
.content-selection > image {
    width: 16rpx;
    height: 26rpx;
    position: absolute;
    right: 26rpx;
}
.content-position {
    margin: unset;
    height: 108rpx;
}
.content-position > image:last-of-type {
    position: absolute;
    right: 26rpx;
    width: 16rpx;
    height: 26rpx;
}
.contact {
    background-color: #888888;
    width: 670rpx;
    height: 94rpx;
    margin: 10px auto 20px;
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    font-size: 18px;
    box-shadow: 0 4rpx 12rpx 2rpx rgba(0, 0, 0, 0.37);
    font-weight: 400;
    /*position: absolute;*/
    /*bottom: -100rpx;*/
    /*left: 50%;*/
    /*transform: translateX(-50%);*/
}
.active {
    background-color: #27B5BA;
}
.mask{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.13;
}
/* 弹出层 */
.modalDlg{
    width: 100%;
    height: 540rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 34rpx 30rpx 0 0;
    box-sizing: border-box;
}
/* 弹出层里面的按钮 */
.ok, .cancel{
    color: #353535;
    font-size: 14px;
    /*border:1px solid red;*/
    margin: 24rpx 0 24rpx 36rpx;
}
.ok {
    color: #27B5BA;
}
.published {
    width: 274px;
    height: 279px;
    border: 1px solid red;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100000;
    background-color: #fff;
    display: flex;
    box-sizing: border-box;
}
.close {
    width: 11px;
    height: 11px;
    border: 1px solid red;
    position: absolute;
    right: 0;
    background-color: red;
}
.add-icon {
    width: 218rpx;
    height: 218rpx;
    border: 1px solid #cccccc;
    display: flex;
    justify-content: center;
    /*flex-wrap: wrap;*/
    align-items: center;
    margin-right: 20rpx;
    margin-bottom: 16rpx;
}
.add-icon > image {
    width: 104rpx;
    height: 104rpx;
}
.images-style {
    position: relative;
    margin: 0 16rpx 16rpx 0;
    /*border: 1px solid red;*/
    width: 218rpx!important;
    height: 218rpx!important;
}
.pub-close {
    position:absolute;
    top: 0;
    right: 0;
    background-color: rgba(0,0,0, .2);
    /*border: 1px solid red;*/
    padding-bottom: 0!important;
    width: 21px;
    height: 21px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.pub-close > image {
    width: 9px;
    height: 9px;
}

.location {
    width: 32rpx;
    height: 40rpx;
    margin-right:20rpx;
    font-family: PingFangSC-Regular,PingFang SC;
}
